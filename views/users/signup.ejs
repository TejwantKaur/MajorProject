<% layout("/layouts/boilerplate") %>

<div class="row mt-3">

    <h2 class="col-6 offset-3">SignUp WanderLust</h2> <br><br><br>
    <div class="col-6 offset-3">
        <form action="/signup"
            method="POST"
            class="needs-validation"
            novalidate>

            <!-- username -->
            <div class="mb-3">
                <label for="username" 
                    class="form-label">
                    Username
                </label>
                <input type="text"
                    name="username"
                    id="username"
                    class="form-control"
                    required/>

                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <!-- email -->
            <div class="mb-3">
                <label for="email"
                    class="form-label">
                    e-mail
                </label>
                <input name="email"
                    id="email"
                    type="email"
                    class="form-control"
                    required/>
            </div>

            <!-- password -->
            <div class="mb-3">
                <label for="password"
                    class="form-label">
                    password
                </label>
                <input name="password"
                    id="password"
                    type="password"
                    class="form-control"
                    required/>
            </div>
            <div class="valid-feedback">
                Looks Good!
            </div>

            <button class="btn btn-success">Register</button>
        </form>
    </div>
</div>