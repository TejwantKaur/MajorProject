<% layout("/layouts/boilerplate") %>

<div class="row mt-3">

    <h3 class="col-6 offset-3">Login WanderLust</h3> <br>
    <hr class="col-6 offset-3"> <br>

    <!-- login form -->
    <div class="col-6 offset-3">
        <form action="/login"
            method="POST"
            class="needs-validation"
            novalidate>

            <!-- Username -->
            <div class="mb-3">
                <label for="username"
                    class="form-label">
                    Username
                </label>
                <input type="text"
                    name="username"
                    id="username"
                    class="form-control"
                    required/>
            </div>

            <!-- password -->
            <div class="mb-3">
                <label for="password"
                    class="form-label">
                    password
                </label>
                <input name="password"
                    id="password"
                    type="password"
                    class="form-control"
                    required/>

                
            </div>

            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>